<launch4jConfig>
  <dontWrapJar>true</dontWrapJar>
  <headerType>console</headerType>
  <jar>bin/hyperbox-server.jar</jar>
  <icon>../../../media/img/hyperbox.ico</icon>
  <stayAlive>false</stayAlive>
  <classPath>
    <mainClass>org.altherian.hboxd.HyperboxInteractive</mainClass>
    <cp>bin/*</cp>
    <cp>lib/*</cp>
  </classPath>
  <jre>
    <bundledJre64Bit>false</bundledJre64Bit>
    <minVersion>1.6.0</minVersion>
    <jdkPreference>preferJre</jdkPreference>
  </jre>
</launch4jConfig>